<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
        <%= @products %>
      </h1>
    </section>
    <% if current_user.admin? %>
    <div class="col-centered"><%= link_to "Add product", products_new_path, class: "btn btn-primary" %></div>
    <div class="col-centered"><%= link_to "View Customer Payments", payments_path, class: "btn btn-primary" %></div>
    <% end %>
  </aside>
</div>
